mixin sectionTitle(text)
  header
    h2
      span &#x25B6
      span= text 
      span &#x25C0
  
doctype html
html(manifest='slackomatic.appcache')
  head
    meta( http-equiv='Content-Type' content='text/html; charset=UTF-8')
    block title
      title slackomatic
    link(rel='stylesheet' type='text/css' href='/css/slackomatic.css') 
    meta(name='viewport' content='width=device-width, initial-scale=1')

  body.slackomatic
    include header
    div.wrapper
      block content
    include footer

    script(src='/js/slackomatic.js')
