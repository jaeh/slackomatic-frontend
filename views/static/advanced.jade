extends ../layout

block title
  title slackomatic - advanced

block content
  section.projector
    +sectionTitle('BenQ projector')

    section.sub.power
      h2 Power
      div.ui
        input.on(type="button" data-path="devices/benq/" data-command="power/on" value="ON")
        input.off(type="button" data-path="devices/benq/" data-command="power/off" value="OFF")

    section.sub.blank
      h2 Blank
      div.ui
        input.on(type="button" data-path="devices/benq/" data-command="display/blank/on" value="ON")
        input.off(type="button" data-path="devices/benq/" data-command="display/blank/off" value="OFF")

    section.sub.brilliant
      h2 Brilliant
      div.ui
        input.on(type="button" data-path="devices/benq/" data-command="display/brilliant/on" value="ON")
        input.off(type="button" data-path="devices/benq/" data-command="display/brilliant/off" value="OFF")
      
    
  section.input
    +sectionTitle('Input')
    div.ui
      input(type="button" data-path="devices/benq/" data-command="display/input/vga1" value="VGA1")
      input(type="button" data-path="devices/benq/" data-command="display/input/vga2" value="VGA2")
      input(type="button" data-path="devices/benq/" data-command="display/input/hdmi" value="HDMI")
      input(type="button" data-path="devices/benq/" data-command="display/input/video" value="AV")

  section.nec
    +sectionTitle('NEC TV')
    
    section.sub.power
      h2 Power
      div.ui
        input.on(type="button" data-path="devices/nec/" data-command="power/on" value="ON")
        input.off(type="button" data-path="devices/nec/" data-command="power/off" value="OFF")
  
    section.sub.input
      h2 Input
      div.ui
        input(type="button" data-path="devices/nec/" data-command="display/input/hdmi" value="HDMI")
        input(type="button" data-path="devices/nec/" data-command="display/input/dvi" value="DVI")
        input(type="button" data-path="devices/nec/" data-command="display/input/vga" value="VGA")

    section.sub.pip
      h2 Pip
      div.ui
        input.on(type="button" data-path="devices/nec/" data-command="pip/on" value="ON")
        input.off(type="button" data-path="devices/nec/" data-command="pip/off" value="OFF")
    
    section.sub.pipsize
      h2 PIP Size
      div.ui
        input(type="button" data-path="devices/nec/" data-command="pip/size/small" value="Small")
        input(type="button" data-path="devices/nec/" data-command="pip/size/medium" value="Medium")
        input(type="button" data-path="devices/nec/" data-command="size/large" value="Large")

    section.sub.piporpop
      h2 PIP or POP
      div.ui
        input.on(type="button" data-path="devices/nec/" data-command="pip/mode/pip" value="PIP")
        input.off(type="button" data-path="devices/nec/" data-command="pip/mode/pop" value="POP")
          
    section.sub.aspect
      h2 Aspect
      div.ui
        input(type="button" data-path="devices/nec/" data-command="pip/mode/side_by_side_aspect" value="SideBySide Aspect")
        input(type="button" data-path="devices/nec/" data-command="pip/mode/side_by_side_full" value="SideBySide Full")
    
    section.sub.input
      h2 PIP Input
      div.ui
        input(type="button" data-path="devices/nec/" data-command="pip/input/hdmi" value="HDMI")
        input(type="button" data-path="devices/nec/" data-command="pip/input/dvi" value="DVI")
        input(type="button" data-path="devices/nec/" data-command="pip/input/vga" value="VGA")

