include ../mixins

div.home.content
  section#device.device
    +sectionTitle('Master power')
    div.ui
      input.on(type='button' data-command='rooms/lounge/power/on' value='ON')
      input.off(type='button' data-command='rooms/lounge/power/off' value='OFF') 

  section#system.system
    +sectionTitle('Input System')
    section.sub.entertainment
      h3 Entertainment
      div.ui
        input(type='button' data-command='rooms/lounge/devices/screeninvader' title='ScreenInvader' value='ScreenInvader')
        input(type='button' data-command='rooms/lounge/devices/chromecast' title='Chromecast' value='Chromecast')

    section.sub.games
      h3 Games
      div.ui
        input(type='button' data-command='rooms/lounge/devices/ps2' title='PS2' value='PS2')
        input(type='button' data-command='rooms/lounge/devices/ps3' title='PS3' value='PS3')
        input(type='button' data-command='rooms/lounge/devices/wii' title='Wii' value='Wii')

    section.sub.local
      h3 Your Laptop
      div.ui
        input(type='button' data-command='rooms/lounge/devices/own_hdmi' title='My own HDMI port' value='HDMI port')
        input(type='button' data-command='rooms/lounge/devices/own_audio_klinke' title='My own Audio Klinke' value='Audio/Klinke')
        input(type='button' data-command='rooms/lounge/devices/bt' title='Philips BT Headset' value='BT Headset')

    div.description
      | The audio and video of the selected device will be shown on the projector and played on the hifi. 
      | To display stuff from your own HDMI capable device just connect the black spare HDMI cable and select 'HDMI port'.
      
  section#volume.volume
    +sectionTitle('Volume')
    section.sub.levels
      div.ui
        input(type='button' data-command='devices/yamaha/volume/low' title='Low' value='Low')
        input(type='button' data-command='devices/yamaha/volume/medium' title='Medium' value='Medium')
        input(type='button' data-command='devices/yamaha/volume/high' title='High' value='High')
      div.ui
        input.on(type='button' data-command='devices/yamaha/mute/off' title="Mute Sound" value="Unmute")
        input.off(type='button' data-command='devices/yamaha/mute/on' title="Mute Sound" value="Mute")

  section#lighting.lighting
    +sectionTitle('Lighting')
    div.ui 
      input(type='button' data-command='rooms/lounge/lighting/off' title='Off' value='Night')

      input(type='button' data-command='rooms/lounge/lighting/super_chillig' title='Boo\!' value='Spooky')

      input(type='button' data-command='rooms/lounge/lighting/chillig' title='Smooooth\.' value='Smooth')

      input(type='button' data-command='rooms/lounge/lighting/normal' title='Bunch o\' normals' value='Normal')

      input(type='button' data-command='rooms/lounge/lighting/chinese_sweatshop' title='Praise BoB' value='NoSlack')

  section#powerSaving.powerSaving
    +sectionTitle('Power saving')
    section.sub.projector
      h3 Projector
      div.ui
        input.on(type='button' data-command='rooms/lounge/powersaving/projector/power/on' title='Turn the projector ON' value='ON')
        input.off(type='button' data-command='rooms/lounge/powersaving/projector/power/off' title='Turn the projector OFF' value='OFF')

    section.sub.projectorblank
      h3 Projector Blank
      div.ui
        input.on(type='button' data-command='rooms/lounge/powersaving/projector/blank/off' title='Unblank the projector' value='ON')
        input.off(type='button' data-command='rooms/lounge/powersaving/projector/blank/on' title='Blank the projector' value='blank')

    section.sub.tv
      h3 TV
      div.ui
        input.on(type='button' data-command='rooms/lounge/powersaving/tv/power/on' title='Turn the TV ON' value='ON')
        input.off(type='button' data-command='rooms/lounge/powersaving/tv/power/off' title='Turn the TV OFF' value='OFF')

    section.sub.yamaha
      h3 Yamaha
      div.ui
        input.on(type='button' data-command='devices/yamaha/power/on' title='Turn the Yamaha ON' value='ON')
        input.off(type='button' data-command='devices/yamaha/power/off' title='Turn the Yamaha OFF' value='OFF')

    section.sub.metacade
      h3 Metacade
      div.ui
        input.on(type='button' data-command='rooms/lounge/powersaving/metacade/power/on' title='Turn the Metacade ON' value='ON')
        input.off(type='button' data-command='rooms/lounge/powersaving/metacade/power/off' title='Turn the Metacade OFF' value='OFF')

    section.sub.lamp1
      h3 Square Lamp
      div.ui
        input.on( type='button' data-command='rooms/lounge/powersaving/lamp1/power/on' title='Turn the square lamp ON' value='ON')
        input.off( type='button' data-command='rooms/lounge/powersaving/lamp1/power/off' title='Turn the square lamp OFF' value='OFF')
